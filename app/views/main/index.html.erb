  <script>

      var tab = []
      <% @tableau.each do |tab| %>
      tab.push("<%= tab %>")
      <% end %>
      console.log(tab)
      $.each(tab, function(index,value){
          $('#'+value).css('background-image','url("/assets/'+value+'.png")')
          console.log(value)
      })


      function reloadmodal(title, content, image, techno, lien){
          $('.modal img').attr('src','/assets/'+image+'.jpg');

          $('.modal-title').html(title)
          $('.modal p').html(content)
          $('.modal h3').html(techno)
          $(".modal a").attr("href", lien)
          console.log(title)
      }

      $('#tomail').click(function () {
          $('#email').slideToggle('slow')
          $('#email').typist({
              speed: 12,
              text: 'Hello!\n'
          })
              .typistAdd('It\'s working!');
      })

      $(document).on('scroll', function() {
          console.log($(this).scrollTop())
          if($(this).scrollTop()>=$('#folio').position().top){
              $('nav a').css("background-color","rgba(20,20,20,1")
              $('nav a').css("color", "rgba(255,255,255,1)")
          }
          else if($(this).scrollTop()>=$('#perso').position().top+$('.black').height()){
              $('nav a').css("background-color","rgba(255,255,255,1")
              $('nav a').css("color", "rgba(20,20,20,1)")
          }
          else{
              $('nav a').css("background-color","rgba(20,20,20,1")
              $('nav a').css("color", "rgba(255,255,255,1)")
          }
      })


  </script>