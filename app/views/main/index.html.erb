            <p><%= formation.nom %> <span><%= formation.date %></span></p>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 descrpars">
            <p><%= formation.description %></p>
          </div>


      <% end %>
    </div>
  </div>
