<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="formation">

  <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
    <h1>Mes Compétences</h1>


    <% @skills.each do |skill| %>

        <% if skill.fk == nil %>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="<%= skill.name %>">
              <div>
                <p><i class="fa fa-sort-desc" aria-hidden="true"></i><%= skill.name %></p>
                <div class="comp">
                  <% @skills.each do |framework| %>

                      <% if skill.id == framework.fk %>
                          <p><%= framework.name %></p>
                      <% end %>
                  <% end %>
                </div>
              </div>
            </div>
        <% end %>


    <% end %>


  </div>
  <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 parcours">
    <h1>Mon Parcours</h1>
    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
      <% @formations.each do |formation| %>

